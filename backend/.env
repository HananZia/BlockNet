# .env

# Flask environment (development | production)
FLASK_ENV=development

# Flask secret key (used for session signing, CSRF, etc.)
SECRET_KEY=dev-change-me

# JWT secret key (used for signing JWT tokens)
JWT_SECRET_KEY=dev-jwt-secret

# Database connection
# For SQLite (default, local)
DATABASE_URL=sqlite:///app.db

# For PostgreSQL (when you migrate later, just uncomment and edit this)
# DATABASE_URL=postgresql://user:pass@localhost:5432/blocknet
